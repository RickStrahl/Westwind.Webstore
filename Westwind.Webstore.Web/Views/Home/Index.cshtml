@using Westwind.Globalization
@model ProductListViewModel
@{
    ViewBag.Title = wsApp.Configuration.ApplicationName;

    var message = TempData["DisplayMessage"] as string;
    var messageIcon = TempData["DisplayIcon"] as string ?? "info";
    var errorDisplay = new ErrorDisplayModel()
    {
        Message = message,
        Icon = messageIcon,
        Timeout = 12
    };
}

<div class="container">
   
    <img src="/images/WestWindLogo.png" style="max-width: 100%"/>
    
    <error-display class="mt-3 mb-2" message="@message" icon="@messageIcon">
    </error-display>

    
    <p class="mt-3" style="clear: both;">
        @Html.Raw(AppResources.Home.WhatsNewMessage)
    </p>
    
    <h3 class="page-header-text">@AppResources.Home.WhatsNewMessageHeader</h3>

    <partial name="~/Views/Products/SpecialsList_Partial.cshtml" model="Model" />

</div>


