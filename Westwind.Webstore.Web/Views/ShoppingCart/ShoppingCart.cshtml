@model ShoppingCartViewModel
@{
    ViewBag.Title = @AppResources.ShoppingCart.ShoppingCartTitle + " - " + wsApp.Configuration.ApplicationName;
}
<div class="container">
    <h2 class="page-header-text">
        <i class="fad fa-shopping-cart"></i>
        Shopping Cart
    </h2>
    
    <form action="" method="POST" style="margin: 0">
        
        <partial name="ShoppingCartItems_Partial" model="Model.Invoice"/>
        
        <div class="mt-3">
            <a  href="/shoppingcart/orderprofile?ReturnUrl=/shoppingcart/OrderForm"
                sp-controller="ShoppingCart"
                class="btn btn-primary ">
                <i class="fas fa-check-circle text-success"></i>
                @AppResources.ShoppingCart.PlaceOrder
            </a>
            
            <a href="~/" class="btn btn-secondary btn-sm continue-button" >
                <i class="fad fa-cart-plus"></i>
                Continue Shopping
            </a>
            
        </div>
    </form>
</div>

@section Headers
{
<style>
    .continue-button {
        display:  block;
        float:  right;
        font-size:  0.8em;        
    }
    @@media(max-width:  767px) {
        .continue-button {            
            float:  none;
            margin-top: 1.5em;
            width:  13.5em;
        }
    }
</style>
}