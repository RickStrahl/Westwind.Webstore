@model SetupTwoFactorViewModel 

<div class="container" style="max-width: 800px">
    <h1 class="page-header-text">
        <i class="far fa-qrcode"></i>
        Set up Two Factor Authentication
    </h1>
    
    
    <div class="alert alert-info mb-3">
        <div class="d-flex">
            <div>
                <i class="fad fa-info-circle me-3 mt-1" style="font-size: 2.5em"></i>
            </div>
            <div class="small">
                <ul class="mt-0 mb-0">
                    <li>Open your Authenticator app and add a new account</li>
                    <li>Scan the QR Code or manually enter the setup code</li>
                    <li>Enter the validation code from your Authenticator</li>
                    <li>Click to <i>Turn on Two Factor Authentication<i/></li>
                </ul>
            </div>
        </div>
    </div>    
    
    <error-display error-display-model="Model.ErrorDisplay" ></error-display>


    <div>
        <img src="@Model.QrCodeImageData" 
             style="width: 100%; max-width: 220px"
             title="Scan this QR Code with your Authenticator app"/>
        
        <div title="Manual entry code to use instead of QR code"
             class="text-secondary"
             style="font-size: 1.02em; font-weight: 500;">
            @Model.TwoFactorSetupKey
        </div>
    </div>
    <div class="mt-3">
        <form action="" method="POST">
            <input class="form-control" style="width: 18em;"
                   asp-for="ValidationKey"
                   placeholder="Authententicator Validation Code: ### ###"  />
            <button name="btnValidate" class="btn btn-primary mt-2">
                <i class="fad fa-check-circle"></i>
                Turn on Two Factor Authentication
            </button>
            
            <input type="hidden" asp-for="CustomerSecretKey" />
        </form>
    </div>
</div>
