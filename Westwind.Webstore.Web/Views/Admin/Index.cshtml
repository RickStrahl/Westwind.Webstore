@using Microsoft.AspNetCore.Hosting
@using System.Runtime.InteropServices
@model Westwind.Webstore.Web.Views.Admin.AdminViewModel;
@inject IWebHostEnvironment Environment
@{
    ViewBag.Title = "Web Store Administration - " + wsApp.Configuration.ApplicationName;
    
}
<style>
    .card-header { background: lightsteelblue;}
</style>
<div class="container">
    
    
    <h1 class="page-header-text mb-0">
        <i class="fad fa-cogs"></i>
        Web Store Administration
    </h1>
    <div class="mt-1 mb-3 header-byline">v@(Model.ApplicationVersion) &nbsp;<small style="font-size: 0.75em">(@Model.ApplicationDate)</small> &bull;
        @Environment.EnvironmentName &bull;
        @RuntimeInformation.FrameworkDescription &bull;
        @RuntimeInformation.OSDescription
    </div>

    <error-display class="mt-3 mb-4" error-display-model="@Model.ErrorDisplay">
    </error-display>

    <div class="responsive-container">

        <div class="card w-50 me-2">
            <div class=" card-header">
                <i class="far  fa-ruler fa-fw"></i>
                Store Operations
            </div>
            <div class="list-group list-group-flush">
                <a href="/admin/ordermanager" class="list-group-item list-group-item-action">Order Manager</a>
                <a href="/admin/productmanager" class="list-group-item list-group-item-action">Product Manager</a>
                <a href="/admin/configuration"
                   class="list-group-item list-group-item-action">
                   View and Edit Configuration
                </a>
            </div>
        </div>

        <div class="card w-50 me-2">
            <div class=" card-header">
                <i class="fad fa-gears fa-fw"></i>
                System Administration
            </div>
            <div class="list-group list-group-flush">
                <a href="/admin/applicationlog.txt" class="list-group-item list-group-item-action">Show Error Log</a>
                <a href="" class="list-group-item list-group-item-action">Compact Database (not implemented yet)</a>
                <a href="/admin/backup" class="list-group-item list-group-item-action">Backup and Download Database</a>
            </div>

        </div>

    </div>
</div>