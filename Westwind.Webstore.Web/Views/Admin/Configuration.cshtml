@model Westwind.Webstore.Web.Views.Admin.ConfigurationViewModel

@section Headers {
    <style>
        html, body { 
            height:  100%;
         }
    </style>
}
<div class="container">
    
    <h1 class="page-header-text">
        <i class="fad fa-gears"></i>
        Web Store Configuration
        
        <a href="/admin" title="Back to main Admin page"
           class="btn btn-secondary btn-sm float-end">
            <i class="fad fa-home-alt text-warning"></i>
        </a>
    </h1>
    <error-display class="mt-3 mb-4" error-display-model="@Model.ErrorDisplay">
      </error-display>
    
    <form method="post" action="">
        <div class="mt-2 mb-2">
            <button type="submit" id="btnUpdateConfiguration" name="btnUpdateConfiguration" class="btn btn-primary">
                <i class="fas fa-circle-arrow-right"></i>
                Update Live Configuration
            </button>
            <button type="submit" id="btnUpdateConfiguration" name="btnWriteConfiguration" 
                    class="btn btn-secondary" onclick="if (!confirm('Are you sure you want to overwrite the base configuration?')) return false;">
                <i class="fas fa-save-circle-arrow-right"></i>
                Write Configuration File
            </button>
        </div>
    
    
        <textarea 
            class="form-control"
            placeholder="Configuration text"
            asp-for="ConfigurationJson"
                    spellcheck="false" autocomplete="off"
            style="font-family: monospace; height:  100em"></textarea>
    
    </form>
</div>
